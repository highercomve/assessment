module ToWords::Langs::En
  class Strategy < ToWords::StrategyBase
    def initialize (params)
      @number, @index, @rest = params
    end
    def calc (number, index, rest = nil)
      case index
      when 1
        unit 
      when 2
        teens 
      when 3
        hundred 
      when 4
        thousand 
      else
        mega 
      end
    end

    def unit 
      units = %w[one two tree four five six seven eight nine]
      units[@number - 1]
    end

    def teens
      if @number == 1
        teens = %w[ten eleven twelve thirteen fourteen fifteen sixteen seventeen eighteen nineteen]
        teens[@rest]
      else 
        @teens = %w[twenty thirty forty fifty sixty seventy eighty ninety]
        "#{teens[@number - 2]}-#{unit(@rest)}" 
      end
    end

    def hundred
    end
  end
